{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        },
        "detailed": {
            "format": "%(asctime)s [%(levelname)s] %(name)s [%(filename)s:%(lineno)d]: %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "standard",
            "stream": "ext://sys.stdout"
        },
        "file_rotating": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "standard",
            "filename": "logs/app.log",
            "maxBytes": 10485760,
            "backupCount": 5,
            "encoding": "utf-8"
        },
        "file_daily": {
            "class": "logging.handlers.TimedRotatingFileHandler",
            "level": "DEBUG",
            "formatter": "detailed",
            "filename": "logs/daily.log",
            "when": "midnight",
            "interval": 1,
            "backupCount": 7,
            "encoding": "utf-8"
        },
        "cot_file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "detailed",
            "filename": "logs/cot_debug.log",
            "maxBytes": 52428800,
            "backupCount": 3,
            "encoding": "utf-8"
        }
    },
    "loggers": {
        "": {
            "level": "INFO",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.main": {
            "level": "INFO",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.parsers.img_parser": {
            "level": "DEBUG",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.parsers.excel_parser": {
            "level": "INFO",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.parsers.docx_parser": {
            "level": "INFO",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.parsers.pdf_parser": {
            "level": "INFO",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.parsers.txt_parser": {
            "level": "INFO",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.parsers.openai_parser": {
            "level": "INFO",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.parsers.catalogue_parser": {
            "level": "INFO",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.utils.preprocess_image": {
            "level": "WARNING",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.utils.process_files": {
            "level": "INFO",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.utils.df_utils": {
            "level": "INFO",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.utils.registry": {
            "level": "INFO",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.mapper.mapper": {
            "level": "INFO",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.mapper.ask_qwen3_cot": {
            "level": "DEBUG",
            "handlers": ["console", "file_rotating", "file_daily", "cot_file"],
            "propagate": false
        },
        "src.mapper.ask_openai_cot": {
            "level": "INFO",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "src.app.enhanced_app": {
            "level": "INFO",
            "handlers": ["console", "file_rotating", "file_daily"],
            "propagate": false
        },
        "paddleocr": {
            "level": "WARNING",
            "handlers": ["file_rotating"],
            "propagate": false
        },
        "paddle": {
            "level": "WARNING",
            "handlers": ["file_rotating"],
            "propagate": false
        }
    }
}

